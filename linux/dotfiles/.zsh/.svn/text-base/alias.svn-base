#!/bin/zsh

############
# alias
############
alias ls='ls -h --color=auto'
alias la='ls -a'
alias ll='ls -lh'
alias lls='ls -rlSh'
alias lla='ls -lah'
alias llas='ls -rlaSh'
alias df='df -h'
alias du='du -h'
alias wtf='man'
alias j='jobs -l'
alias grep='grep --color=auto'
alias mplayer='mplayer -fs -aspect 16:10 '
alias mv='mv'
alias cp='cp -p'
alias rmrf='rm -rf'
alias ugo-x='chmod ugo-x'
alias u+x='chmod u+x'
alias paranoid='chmod 600'
alias tc='sudo truecrypt'
alias tcumount='sudo truecrypt -d '
alias crypt='sudo truecrypt /mnt/usbstick/crypt.tc /home/matflasch/.crypt'
alias gimme="sudo apt-get install"
alias search="sudo apt-cache search"

# change font size with one command
alias hide='echo -en "\033]50;nil2\007"'
alias tiny='echo -en "\033]50;-misc-fixed-medium-r-normal-*-*-80-*-*-c-*-iso8859-15\007"'
alias small='echo -en "\033]50;6x10\007"'
alias medium='echo -en "\033]50;-misc-fixed-medium-r-normal--13-120-75-75-c-80-iso8859-15\007"'
alias default='echo -e "\033]50;-misc-fixed-medium-r-normal-*-*-140-*-*-c-*-iso8859-15\007"'
alias large='echo -en "\033]50;-misc-fixed-medium-r-normal-*-*-150-*-*-c-*-iso8859-15\007"'
alias huge='echo -en "\033]50;-misc-fixed-medium-r-normal-*-*-210-*-*-c-*-iso8859-15\007"'
alias smartfont='echo -en "\033]50;-artwiz-smoothansi-*-*-*-*-*-*-*-*-*-*-*-*\007"'
alias semifont='echo -en "\033]50;-misc-fixed-medium-r-semicondensed-*-*-120-*-*-*-*-iso8859-15\007"'


##################
# alias global
##################
alias -g ...='../..'
alias -g ....='../../..'
alias -g .....='../../../..'
alias -g C='| wc -l'
alias -g dir='ls -lSrah'
alias -g md='mkdir -p'
alias -g L='| less -S'
alias -g T='| tail -20'
alias -g H='| head -20'
alias -g G='| egrep'
alias -g S='| sort'
alias -g Q='exit'
alias -g NE='2> /dev/null'
alias -g NO='&> /dev/null'

################
# type alias
################
# documents
alias -s pdf=$PDFVIEWER
# office
alias -s ods=$OFFICEVIEWER 
alias -s odt=$OFFICEVIEWER 
alias -s ppt=$OFFICEVIEWER 
# media
alias -s avi=$MEDIAPLAYER
alias -s mp3=$MUSICPLAYER
alias -s ogg=$MUSICPLAYER
alias -s wav=$MUSICPLAYER
alias -s wmv=$MUSICPLAYER
# web
alias -s html=$BROWSER
# images
alias -s jpg=$IMAGEVIEWER
alias -s jpeg=$IMAGEVIEWER
alias -s png=$IMAGEVIEWER
alias -s gif=$IMAGEVIEWER
# wine
alias -s exe="wine"
